<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="#D8E5F3"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ViewActivity">

    <TextView
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_baseline_fiber_new_24"
        android:gravity="right"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImgPhoto"
            android:layout_width="150dp"
            android:layout_height="133dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="148dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mTvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/ic_cart"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mTvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:paddingRight="20dp"
                android:text="TextView"
                android:textColor="#184342"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mTvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_location"
                android:paddingRight="20dp"
                android:text="TextView"
                android:textColor="#184342"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mTvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:text="TextView"
                android:textColor="#070707"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:background="#4A4B55"
        android:orientation="horizontal">


        <Button
            android:id="@+id/mBtncall"
            android:layout_width="144dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="Call"
            app:backgroundTint="#090909" />

        <Button
            android:id="@+id/mBtnpay"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Message"
            app:backgroundTint="#050505" />
    </LinearLayout>


</LinearLayout>
























