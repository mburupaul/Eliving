<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/mEdtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:text="Shs."
        android:hint="Enter Price"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSave_Add"
        app:layout_constraintStart_toStartOf="@+id/mEdtPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPhoneNumber" />

    <EditText
        android:id="@+id/mEdtPName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="412dp"
        android:ems="15"
        android:layout_marginTop="10dp"
        android:hint="Enter Product Name - Description"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pick_img" />

    <EditText
        android:id="@+id/mEdtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="Enter Location"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/mEdtPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/mEdtPName"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPName" />

    <Button
        android:id="@+id/mBtnSave_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="SAVE"
        app:backgroundTint="#113C43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPrice" />

    <ImageView
        android:id="@+id/img_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/mEdtPName"
        app:layout_constraintEnd_toStartOf="@+id/btn_pick_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/btn_pick_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="81dp"
        android:text="Pick Image"
        app:backgroundTint="#37772C"
        app:layout_constraintBottom_toTopOf="@+id/mEdtPName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_save"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mEdtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:text="+254 "
        android:hint="Enter Phone Number"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/mEdtPrice"
        app:layout_constraintEnd_toEndOf="@+id/mEdtLocation"
        app:layout_constraintTop_toBottomOf="@+id/mEdtLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>