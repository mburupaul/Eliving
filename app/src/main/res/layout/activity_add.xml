<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/mEdtPrice"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="56dp"
        android:background="#D9E9F1"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="Shs."
        app:layout_constraintBottom_toTopOf="@+id/mBtnSave_Add"
        app:layout_constraintStart_toStartOf="@+id/mEdtPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPhoneNumber" />

    <EditText
        android:id="@+id/mEdtPName"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="#C6C6C6"
        android:ems="15"
        android:hint="Enter Product Name - Description"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_save" />

    <EditText
        android:id="@+id/mEdtLocation"
        android:layout_width="318dp"
        android:layout_height="51dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="34dp"
        android:background="#D5E8F1"
        android:ems="10"
        android:hint="Enter Location"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/mEdtPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPName" />

    <Button
        android:id="@+id/mBtnSave_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="UPLOAD "
        app:backgroundTint="#113C43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPrice" />

    <ImageView
        android:id="@+id/img_save"
        android:layout_width="164dp"
        android:layout_height="110dp"
        android:background="#888282"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/btn_pick_img"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:text="Pick Image"
        app:backgroundTint="#050505"
        app:layout_constraintBottom_toTopOf="@+id/img_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/mEdtPhoneNumber"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginBottom="31dp"
        android:background="#D5D0D0"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:text="+254 7 "
        app:layout_constraintBottom_toTopOf="@+id/mEdtPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>