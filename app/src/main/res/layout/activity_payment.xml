<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_3" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="395dp"
            android:layout_height="306dp"
            android:background="@drawable/login_bg"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/TvCall"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="#FAFAFA"
                android:drawableLeft="@drawable/ic_phone"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="Call Seller"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TvPay"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="#99A3A2"
                android:drawableLeft="@drawable/ic_money"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="Pay Now"
                tools:textSize="40sp" />

            <TextView
                android:id="@+id/TvOrder"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="#F7F8F8"
                android:drawableLeft="@drawable/ic_pending"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="Order Now"
                tools:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:text=" &quot;The best form of customer service is self-service. Constantly empower customers to get their own answers themselves.&quot;"
                android:textColor="#090909"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




